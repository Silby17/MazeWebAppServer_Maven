<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>

  <listener>
    <listener-class>controllers.ServletContextManager</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <servlet-mapping>
    <servlet-name>controllers.LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.MenuServlet</servlet-name>
    <url-pattern>/menu</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.CloseGameServlet</servlet-name>
    <url-pattern>/Close</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>controllers.GetMultiMazeServlet</servlet-name>
    <url-pattern>/GetMulti</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>controllers.GetPlayerMoveServlet</servlet-name>
    <url-pattern>/GetPlayerMove</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.LogoutServlet</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.MultiplayerServlet</servlet-name>
    <url-pattern>/MultiplayerServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.NewUserFormServlet</servlet-name>
    <url-pattern>/NewUser</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.RequestGameServlet</servlet-name>
    <url-pattern>/RequestGameServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>controllers.SendMoveServlet</servlet-name>
    <url-pattern>/SendMoveServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>controllers.SingleMazeServlet</servlet-name>
    <url-pattern>/SingleMazeServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>controllers.SingleSolutionServlet</servlet-name>
    <url-pattern>/SingleSolutionServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>controllers.SinglePlayerButtonHandlerServlet</servlet-name>
    <url-pattern>/SinglePlayerButtonHandlerServlet</url-pattern>
  </servlet-mapping>
</web-app>
